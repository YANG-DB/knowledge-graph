<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>catalog</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Catalog/indexTemplates</directory>
            <outputDirectory>./indexTemplates</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Catalog/indexProvider</directory>
            <outputDirectory>./indexProvider</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Catalog/ontology</directory>
            <outputDirectory>./ontology</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Catalog/dataset</directory>
            <outputDirectory>./dataset</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/assembly/Catalog/public</directory>
            <outputDirectory>./public</outputDirectory>
        </fileSet>

    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/resources/assembly/Catalog/config/application.test.engine3.m1.dfs.catalog.public.conf</source>
            <outputDirectory>./config</outputDirectory>
            <destName>application.conf</destName>
        </file>
        <file>
            <source>${project.basedir}/resources/logConfig/logback.xml</source>
            <outputDirectory>./config</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/standard/start-service.sh</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>